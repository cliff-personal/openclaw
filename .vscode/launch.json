{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "OpenClaw: Gateway (TSX debug, 18789)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder:openclaw}",
      "env": {
        "OPENCLAW_NO_RESPAWN": "1"
      },
      "program": "${workspaceFolder:openclaw}/src/entry.ts",
      "args": ["gateway", "--port", "18789", "--force", "--verbose"],
      "runtimeArgs": ["--enable-source-maps", "--import", "tsx"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder:openclaw}/src/**",
        "${workspaceFolder:openclaw}/ui/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "OpenClaw: Control UI (Chrome, 5173)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173/",
      "webRoot": "${workspaceFolder:openclaw}/ui/src",
      "sourceMaps": true,
      "resolveSourceMapLocations": ["${workspaceFolder:openclaw}/ui/**", "!**/node_modules/**"]
    }
  ]
}
